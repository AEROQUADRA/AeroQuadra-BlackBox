<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoveActivity">

    <TextView
        android:id="@+id/moveDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move Duration (ms):"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/moveDurationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter duration in milliseconds"
        app:layout_constraintStart_toEndOf="@id/moveDurationTextView"
        app:layout_constraintTop_toTopOf="@id/moveDurationTextView"
        android:inputType="number"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/saveDurationButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="saveDuration"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/moveDurationTextView"
        android:onClick="restartMainActivity"
        android:text="Restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

</androidx.constraintlayout.widget.ConstraintLayout>
